{
    "log": {
        "loglevel": "warning",
        "access": "/var/lib/xray/access.log",
        "error": "/var/lib/xray/error.log"
    },
    "inbounds": [
        {
            "port": 8443,
            "protocol": "vless",
            "settings": {
                "clients": [],
                "decryption": "none"
            },
            "streamSettings": {
                "network": "tcp",
                "security": "tls",
                "tlsSettings": {
                    "alpn": ["h2", "http/1.1"]
                }
            }
        },
        {
            "port": 8080,
            "protocol": "vless",
            "settings": {
                "clients": [],
                "decryption": "none"
            },
            "streamSettings": {
                "network": "xhttp",
                "security": "tls",
                "xhttpSettings": {
                    "host": "${DOMAIN}",
                    "path": "/xhttp"
                },
                "tlsSettings": {
                    "alpn": ["h2", "http/1.1"]
                }
            }
        },
        {
            "port": 2087,
            "protocol": "vless",
            "settings": {
                "clients": [],
                "decryption": "none"
            },
            "streamSettings": {
                "network": "xhttp",
                "security": "tls",
                "xhttpSettings": {
                    "host": "${DOMAIN}",
                    "path": "/xhttp/stream"
                },
                "tlsSettings": {
                    "alpn": ["h2", "http/1.1"]
                }
            }
        }
    ],
    "outbounds": [
        {
            "protocol": "freedom",
            "settings": {}
        }
    ]
} 